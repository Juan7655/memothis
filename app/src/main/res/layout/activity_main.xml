<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="juandavid.example.com.memothis.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/edit_text"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_term_text"
            android:id="@+id/tv"
            android:textSize="30sp"
            android:gravity="center"/>
    </ScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text"
        android:textSize="30sp"
        android:hint="@string/answer_hint"
        android:layout_margin="10dp"
        android:layout_above="@+id/submit_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_button"
        android:text="@string/submit_text"
        android:layout_above="@+id/image"
        android:layout_margin="20dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:layout_above="@+id/button"
        android:layout_centerInParent="true"
        android:contentDescription="@string/result_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="@string/practice_text"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>


</RelativeLayout>
